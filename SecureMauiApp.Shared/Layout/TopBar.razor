<div class="top-row px-4 sticky-top">

    <AuthorizeView>
        <NotAuthorized>
            <NavLink class="nav-link" href="login">Login</NavLink>
            <NavLink class="nav-link" href="register">Register</NavLink>
        </NotAuthorized>
        <Authorized>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="profile">
                    <span class="bi bi-person-circle-nav-menu" aria-hidden="true"></span>@context.User.Identity.Name
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="logout">
                    <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span>Log Out
                </NavLink>
            </div>
        </Authorized>
    </AuthorizeView>
</div>